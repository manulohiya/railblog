<h1>Profile Page</h1>

<div>
	<p><%= current_user.first_name %></p>
	<p><%= current_user.last_name %></p>
	<p><%= current_user.email %></p>
</div> 

<% if current_user.posts.any? %>
	<h3> My Posts </h3>

	<%= current_user.posts.each do |post|%>

		<p><%= post.title %> - <%= post.description %> </p>

	<% end %>

<% else %>
	<h4> You dont have any posts yet! </h4>
	<%= link_to "Add new post", new_recipe_path %>


<% end %>